<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayoutPortfolio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/tableRowPortfolio"
        android:visibility="visible">

        <TextView
            android:id="@+id/textViewBitcoin"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/bitcoin" />

        <TextView
            android:id="@+id/textViewEthereum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/ethereum" />

        <TextView
            android:id="@+id/textViewIota"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/iota" />

        <TextView
            android:id="@+id/textViewRipple"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/ripple" />

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_dustbin" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRowPortfolioTotal"
        android:visibility="visible">

        <TextView
            android:id="@+id/textViewPortfolioTotal"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/total" />
    </TableRow>

</TableLayout>