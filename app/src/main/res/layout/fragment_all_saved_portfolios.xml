<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_container_saved_portfolios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.portfolio.steff.koinexportfolio.AllSavedPortfoliosFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="5">

                <TableRow>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/bitcoin" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/ethereum" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/iota" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/ripple" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/dustbin"
                        android:visibility="invisible" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/tableLayoutPortfolio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TableRow
                    android:id="@+id/tableRowPortfolio"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textViewBitcoin"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/bitcoin" />

                    <TextView
                        android:id="@+id/textViewEthereum"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/ethereum" />

                    <TextView
                        android:id="@+id/textViewIota"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/iota" />

                    <TextView
                        android:id="@+id/textViewRipple"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/ripple" />

                    <ImageView
                        android:id="@+id/imageViewDelete"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/dustbin" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.SwipeRefreshLayout>
